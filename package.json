{
  "name": "vibe-check",
  "version": "1.0.0",
  "description": "AI-powered GitHub repository audit tool using Claude Code SDK",
  "main": "build/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "node build/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["github", "audit", "ai", "claude", "code-analysis"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.61",
    "express": "^4.18.2",
    "simple-git": "^3.19.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.4",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "prettier": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
